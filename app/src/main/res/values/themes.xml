<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="Theme.ComposeWallpaper" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryVariant">@color/theme_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_color</item>
        <item name="colorSecondaryVariant">#BA85FB</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.WallpaperApp" parent="Theme.ComposeWallpaper" />

    <style name="TabLayoutSelectedTextAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TabLayoutTextAppearance">
        <item name="android:textSize">16sp</item>
    </style>

</resources>